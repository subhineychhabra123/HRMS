@using EMPMGMT.Utility;
@{
    ViewBag.Title = "Upload Employees";
    Layout = "~/Views/Shared/_LayoutInfo.cshtml";
    <title>EMPMGMT Deployment | Upload Employees </title>
}

@model EMPMGMT.Web.ViewModels.ProfileVM
@section scripts {

    <script src="~/Scripts/file-upload/jquery.uploadfile.js"></script>
    <script  type="text/javascript" src="@Url.Content("~/Scripts/file-upload/jquery.form.js")"></script>
    <link href="~/Scripts/file-upload/uploadfile.min.css" rel="stylesheet" />
    <script src="~/Scripts/EMPMGMT.User/EMPMGMT.User.uploaduser.js"></script>
}

@section ReadyScripts
{

EMPMGMT.User.uploaduser.pageLoad();
    }

<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <div class="text-right">
                @*<a class="btn btn-primary redirectBack" href="@Request.UrlReferrer">Back</a>*@
            </div>
            <header class="panel-heading">
                <div class="panel-actions">
                </div>
                <h2 class="panel-title">Upload Employees</h2>
            </header>
            <div class="panel-body">
                <div class="form-horizontal" data-bind="validationOptions: { insertMessages: false }">
                    <div class="form-group">
                        <div class="col-md-12 control-label">
                            <div class="text-left">
                                <span class="text-left required">Note: email field  is mandatory in excel file</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 control-label">
                            <div class="text-left">
                                <span class="text-left">Download excel file format   <a href="@ReadConfiguration.SiteUrl/Uploads/Sample.xlsx">Click Here</a></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputSuccess" class="col-md-3 control-label">Profile<span class="required">*</span></label>
                        <div class="col-md-6 ">
                            <select id="profilelstdropdown" class="form-control _proflelstdropdown">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputSuccess" class="col-md-3 control-label">Excel file<span class="required">*</span></label>
                        <div class="col-md-6">
                            <input type="file" value="Upload" name="fileupload" id="fileupload" />
                        </div>
                    </div>
                </div>
            </div>
            <footer class="panel-footer  pl-none pr-none">
                @*                <div class="row">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button class="btn btn-primary _EditUserBtn" id="ButtonUploadUser">Upload Users</button>
                    </div>
                </div>*@
                <div class="form-group">
                    <div class="col-md-3 control-label"></div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-primary _EditUserBtn permissionbased"  data-permission="@string.Concat(Constants.MODULE_USER, Constants.PERMISSION_CREATE)" id="ButtonUploadUser">Upload Users</button>
                    </div>
                </div>
            </footer>
            <div id="sucessmsg" style="display: none" class="message-success">
            </div>
        </section>
    </div>
</div>


